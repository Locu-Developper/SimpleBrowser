<?xml version="1.0" encoding="utf-8"?>
<Window
  x:Class="MemoBrowser.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:MemoBrowser"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Name="MemoBrowser"
  Title="MemoBrowser">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Name="RootComponent" Loaded="RootComponent_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- メニューバー/アドレスバー -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
  Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
  BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
  BorderThickness="0,0,0,1"
  Padding="8,4">

            <Grid ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 戻るボタン -->
                <Button Grid.Column="0" 
          Name="BackButton" 
          Width="32" 
          Height="32" 
          Background="Transparent"
          BorderThickness="0"
          CornerRadius="4"
          Padding="0"
          ToolTipService.ToolTip="戻る">
                    <FontIcon Glyph="&#xE72B;" FontSize="12"/>
                </Button>

                <!-- 進むボタン -->
                <Button Grid.Column="1" 
          Name="ForwardButton" 
          Width="32" 
          Height="32" 
          Background="Transparent"
          BorderThickness="0"
          CornerRadius="4"
          Padding="0"
          ToolTipService.ToolTip="進む">
                    <FontIcon Glyph="&#xE72A;" FontSize="12"/>
                </Button>

                <!-- 更新ボタン -->
                <Button Grid.Column="2" 
          Name="RefreshButton"
          Width="32" 
          Height="32" 
          Background="Transparent"
          BorderThickness="0"
          CornerRadius="4"
          Padding="0"
          ToolTipService.ToolTip="更新">
                    <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                </Button>

                <!-- アドレスバー -->
                <Border Grid.Column="3" 
          Background="{ThemeResource TextControlBackground}"
          BorderBrush="{ThemeResource TextControlBorderBrush}"
          BorderThickness="1"
          CornerRadius="10"
          Height="32">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- セキュリティアイコン -->
                        <FontIcon Grid.Column="0" 
                    Glyph="&#xE72E;" 
                    FontSize="14" 
                    Foreground="{ThemeResource SystemAccentColor}"
                    Margin="12,0,8,0"
                    VerticalAlignment="Center"/>

                        <!-- URL入力欄 -->
                        <TextBox Grid.Column="1" 
                   Name="AddressTextBox"
                   Text="https://www.google.com"
                   Height="32"
                   Padding="10,7"
                   BorderThickness="0"
                   Background="Transparent"
                   VerticalAlignment="Center"
                   VerticalContentAlignment="Center"
                   PlaceholderText="検索またはWebアドレスを入力"
                   FocusVisualPrimaryThickness="0"
                   FocusVisualSecondaryThickness="0"
                   KeyDown="AddressBar_KeyDown"/>

                        <!-- お気に入りボタン -->
                        <Button Grid.Column="2" 
                  Name="FavoriteButton"
                  Width="32" 
                  Height="32"
                  Background="Transparent"
                  BorderThickness="0"
                  CornerRadius="16"
                  Padding="0"
                  Margin="4,0,8,0"
                  ToolTipService.ToolTip="お気に入りに追加">
                            <FontIcon Glyph="&#xE734;" FontSize="14"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- メインコンテンツエリア -->
        <Grid Grid.Row="1" Grid.Column="0">
            <WebView2 x:Name="webView" Source="https://google.com"/>
        </Grid>

        <!-- タブ一覧 -->
        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- タブリスト -->
            <ListView Grid.Row="0" ItemsSource="{x:Bind tabViewModel.Tabs}" x:Name="tabListView" SelectedIndex="0">
                <ListView.ItemTemplate>
                    
                    <!-- タブ単体テンプレート -->
                    <DataTemplate x:Name="SingleLineDataTemplate" x:DataType="local:TabNode">
                        <StackPanel  Orientation="Horizontal" Height="44" Padding="2">
                            <TextBlock Text="{x:Bind Url}" VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" Margin="0,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Row="1" Content="+ 新しいタブ" 
                Height="44" 
                Margin="12"
                Click="AddNewTab_Click"
                Background="{ThemeResource AccentButtonBackground}"
                Foreground="WhiteSmoke"
                CornerRadius="4"
                HorizontalAlignment="Stretch" 
                    VerticalAlignment="Bottom"/>
        </Grid>

    </Grid>
</Window>